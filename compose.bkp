# Use root/example as user/password credentials
version: '3.1'

services:

  db: 
    build: 
      context: ./mysqld
      dockerfile: Dockerfile

    command: --default-authentication-plugin=mysql_native_password
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: example
    volumes:
      - ./mysql:/var/lib/mysql/
      - ./dump/asterisk.sql:/docker-entrypoint-initdb.d/asterisk.sql


  adminer:
    image: adminer
    restart: always
    ports:
      - 8080:8080
